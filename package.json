{
  "name": "claude-code-configured-vscode",
  "displayName": "Claude Code Configuration Runner",
  "description": "Claude Code Configuration Runner for VS Code.",
  "version": "0.0.2",
  "publisher": "jasonschulz",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonspaulso/claude-code-configured-vscode.git"
  },
  "icon": "resources/claude-light.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "icons": {
      "claude-icon": {
        "description": "claude-icon",
        "default": {
          "fontPath": "resources/icons.woff",
          "fontCharacter": "\\E900"
        }
      },
      "gemini-icon": {
        "description": "gemini-icon",
        "default": {
          "fontPath": "resources/icons.woff",
          "fontCharacter": "\\E902"
        }
      },
      "codex-icon": {
        "description": "codex-icon",
        "default": {
          "fontPath": "resources/icons.woff",
          "fontCharacter": "\\E901"
        }
      }
    },
    "commands": [
      {
        "command": "claude-code-configured.runClaudeCodeConfigured",
        "title": "Run Claude Code Configured",
        "icon": "./resources/claude-color.svg"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "claude-code-configured.runClaudeCodeConfigured",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
